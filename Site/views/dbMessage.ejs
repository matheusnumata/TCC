<!DOCTYPE html>
<html lang="pt-br" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="_css/estiloDbMessage.css">
    <script src="_scripts/captureGET.js"></script>
    <script type="text/javascript" src="_scripts/clipboardFunctions.js"></script>
  </head>
  <body>
    <div class="message-container">
      <div class="message-header">
        <div class="back-btn" onclick="location.href = 'index.html'"></div>
      </div>
      <div class="message-body">
        <div class="message-icon" id="message-icon"></div>
        <h1 id="message-text"><h1>
        <h1 id="error-text"><h1>
        <input id="id-text" readonly>
        <div id="copy-btn" title="Copiar" onclick="copyToClipboard('id-text')"></div>
      </div>
    </div>

    <script type="text/javascript">
      var sucess = <%= sucess %>;
      var message = "<%= message %>";
      var id = "<%= id %>";
      var error = "<%= error %>";

      console.log(sucess);

      if(!sucess){
        //window.location = "/index";
      }
      if(sucess != null){
        if(error == null || error == "")
          error = "Erro não definido."
        if(message == null || message == "")
          message = "Mensagem não definida."
        if(id == null || id == "")
          id = "ID não definido."
      }

      if(sucess){
        document.getElementById('id-text').style.display = "block";
        document.getElementById('id-text').value = id;
        document.getElementById('message-icon').style.display = "block";
        document.getElementById('message-icon').classList.add("sucess-icon");
        document.getElementById('message-text').style.display = "block";
        document.getElementById('message-text').classList.add("sucess-text");
        document.getElementById('message-text').innerHTML = message;
      }else{
        document.getElementById('id-text').style.display = "none";
        document.getElementById('message-icon').style.display = "block";
        document.getElementById('message-icon').classList.add("insucess-icon");
        document.getElementById('message-text').style.display = "block";
        document.getElementById('message-text').classList.add("insucess-text");
        document.getElementById('message-text').innerHTML = message;
        document.getElementById('error-text').style.display = "block";
        document.getElementById('error-text').innerHTML = error;

        document.getElementById('id-text').style.display = "none";
        document.getElementById('copy-btn').style.display = "none";
      }
    </script>
  </body>
</html>
